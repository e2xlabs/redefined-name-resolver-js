{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "composite": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@resolver/*": ["./src/*"]
    }
  },
  "lib": [
    "es2020"
  ],
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
